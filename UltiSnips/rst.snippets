global !p
def line(string, size):
	if size<3: size = 3
	return string * size
endglobal

snippet h1 "header: level1"
`!p
snip.rv = line("#",len(t[1]))
`
${1:${VISUAL:Headline}}
`!p
snip.rv = line("#",len(t[1]))
`

$0
endsnippet

